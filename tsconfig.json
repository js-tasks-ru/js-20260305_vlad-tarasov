{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom/vitest",
      "vitest-fetch-mock"
    ]
  },
  "include": [
    "shared/**/*.ts",
    "04-oop-basic-intro-to-ts/**/*.ts",
    "05-dom-document-loading/**/*.ts",
    "06-events-practice/**/*.ts",
    "07-forms-fetch-api/**/*.ts",
    "08-async-code-fetch-api/**/*.ts",
    "09-tests-for-frontend-apps/**/*.ts",
    "10-routes-browser-history-api/**/*.ts",
  ],
  "exclude": [
    "**/__mocks__/**",
    "node_modules"
  ]
}